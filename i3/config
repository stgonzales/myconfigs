set $focused             #61E786

# window colors
#                       border              background         text                 indicator
client.focused          $bg_color           $bg_color          $text_color          $focused
client.unfocused        $inactive_bg_color  $inactive_bg_color $inactive_text_color $focused
client.focused_inactive $inactive_bg_color  $inactive_bg_color $inactive_text_color $focused
client.urgent           $urgent_bg_color    $urgent_bg_color   $text_color          $focused

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        position top
        font pango:Ubuntu 10
        padding 4px 0

        colors {
                background $bg_color
                statusline $text_color
                separator  $inactive_text_color
                                   #border          #background      #text
                focused_workspace  #4c7899          #285577          #ffffff
                active_workspace   #333333          #5f676a          #ffffff
                inactive_workspace #333333          #222222          #888888
                urgent_workspace   $urgent_bg_color $urgent_bg_color $text_color
                binding_mode       #2f343a          $urgent_bg_color #ffffff
        }
}
